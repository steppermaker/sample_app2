<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if logged_in? %>
      <div class="user_button">
        <%= render 'follow_form' %>
        <%= render 'rooms/room_button' %>
      </div>
    <% end %>
    <% if @user.microposts.any? %>
      <div class="flex-microposts">
        <h3>Microposts <%= @user.microposts.count %></h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
      <%= paginate @microposts %>
      </div>
    <% end %>
  </div>
  <%= render "shared/login_required" %>
</div>
