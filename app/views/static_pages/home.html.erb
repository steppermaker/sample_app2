<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form'  %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="flex-microposts">
        <h3>Micropost feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Latest microposts</h1>
      <div class="flex-microposts">
        <ol class="microposts">
          <%= render @microposts %>
          <%= paginate @microposts %>
        </ol>
      </div>
    </div>
  </div>
  <%= render "shared/login_required" %>
<% end %>
