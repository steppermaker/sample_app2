<% provide(:title, "Change profile") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Change profile</h1>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :change, "profile" %>

      <%= f.label :profile %>
      <%= f.text_area :profile, class: "form_control" %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: "form_control" %>

      <%= f.submit "Change", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
