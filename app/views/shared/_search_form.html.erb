<%= form_with(url: path, method: :get, local: true, class: "search_form") do |f| %>
    <%= f.search_field :q, class: "form-control sbox",
                              placeholder: "Search ..." %>
    <%= f.button "Search...", class: "sbtn" do %>
      <%= content_tag :i, "", class: "glyphicon glyphicon-search"  %>
    <% end %>
<% end %>
