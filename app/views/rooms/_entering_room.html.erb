<% if current_user.mutual_follow?(@user) %>
  <% if @is_room.present? %>
    <%= link_to "To chat room", room_path(@room_id), class: 'btn btn-primary' %>
  <% else %>
    <%= form_for(@room) do |f| %>
      <%= hidden_field_tag :user_id, @user.id %>
      <%= f.submit "Start chatting!", class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>
